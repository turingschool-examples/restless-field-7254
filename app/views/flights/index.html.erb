<h1>Flight Index</h1>

<% @flights.each do |flight| %>
  <div id="flight-<%= flight.id%>">
  <p>
  <%= flight.number %>
  <%= flight.airline.name %>
  <ul>
  <% flight.passengers.each do |passenger| %>
  <div id="passenger-<%= passenger.id%>">
    <li><%= passenger.name %>
    <%= link_to "Remove From Flight", "/flights/#{flight.id}/passengers/#{passenger.id}", method: :delete %></li>
  </div>
  <% end %>
  </ul>
  </p>
<% end %>