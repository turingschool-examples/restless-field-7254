<h1>Flights Index Page</h1>
<div class="flight index">
  <% @flights.each do |flight| %>
    <div id=<%= "flights-#{flight.id}" %>
      <p> Flight Number: <%= flight.number %> - Airline: <%= flight.airline.name %> </p>
        <% flight.passengers.removed.each do |passenger| %>
        <p> Passenger: <%= passenger.name %> - <%= link_to "Remove #{passenger.name}", flight_path(passenger), method: :patch, params: {update_status_to: :removed}%> </p>
      <% end %>
    </div>
  <% end %>
</div>

<div id="removed-passengers">
  <h2>Removed Passengers</h2>
    <% @flights.each do |flight| %>
      <% flight.passengers.added.each do |passenger| %>
        <p><%= passenger.name %></p>
      <% end %>
    <% end %>
</div>
