<h1>Flights Index Page</h1>


<% @flights.each do |flight| %>
<div id="flight-<%= flight.id %>">
    <h3>Flight Number: <%= flight.number %>  Airline: <%= flight.airline.name %></h3>
    <h4>Passenegrs</h4>
    <% flight.passengers.each do |passenger| %>
        <p><%= passenger.name %></p>
    <% end %><hr>
</div>
<% end %>