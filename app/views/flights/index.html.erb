<h1>Flights' Index</h1>

<% @flights.each do |flight| %>
  <div id='flight-<%= flight.id %>'>
    <h2>Flight: <%= flight.number %></h2> <h3>Airline: <%= flight.airline.name %></h3><br>
    <h3>Passengers:</h3><ul>
      <% flight.passengers.each do |pass| %>
      <div id='passenger-<%= pass.id %>'>
        <li><%= pass.name %><%= link_to 'Remove Passenger', "/flights/#{flight.id}/#{pass.id}", method: :delete %></li>
      </div>
      <% end %>
    </ul>
  </div>
<% end %>