<% @flights.each do |flight| %>
<div id="flight-<%=  flight.id %>">
  <%= flight.number %> <%= flight.airline.name %>
  <%= flight.passengers.each do |passenger| %>
  <div id="<%= passenger.id %>">
    <%= passenger.name %>
    <%= link_to "Remove Passenger", flight_passenger_path(flight, passenger), method: :delete %>
  </div>
    <% end %>
  <% end %>
</div>
